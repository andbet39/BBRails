<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :start_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 5, 
                              order: [:day,:month, :year] %>
 <%= f.input :end_date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year + 5, 
                              order: [:day,:month, :year] %>  <%= f.association :room %>
  <%= f.association :customer %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn' %>
  </div>
<% end %>
